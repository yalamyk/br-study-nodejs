doctype html
html
	head
		meta(charset="utf-8")
	body
		h1 
			a(href="/topic") Server Side JavaScript
		ul
			each topic in topics
				li
					a(href="/topic/"+topic.id)= topic.title
		article
			form(action="/topic/"+topic.id+"/edit" method="post")
				p
					input(type="text" value=topic.title name="title" placeholder="title" id="title")
				p
					textarea(name="description" placeholder="description")
						=topic.description
				p
					input(type="text" value=topic.author name="author" placeholder="author")
				p
					input(type="submit")
		ul
			li
				a(href="/topic/add") add